<!-- Modal pour l'agrandissement des images -->
<div id="imageModal" class="fixed hidden inset-0 z-50 flex items-center justify-center bg-black bg-opacity-75">
  <div class="relative">
      <img id="modalImage" class="max-h-screen max-w-screen-lg" src="" alt="Image agrandie">
      <button id="closeModal" class="absolute top-4 right-4 text-white text-4xl font-bold">&times;</button>
  </div>
</div>

<!-- Script pour la modal -->
<script>
  // Fonction pour ouvrir la modal avec l'image agrandie
  function openModal(imgSrc, imgAlt) {
      const modal = document.getElementById('imageModal');
      const modalImg = document.getElementById('modalImage');
      
      modal.classList.remove('hidden');
      modalImg.src = imgSrc;
      modalImg.alt = imgAlt;
      
      // Empêcher le défilement du body
      document.body.style.overflow = 'hidden';
  }

  // Fermer la modal en cliquant sur le bouton de fermeture
  document.getElementById('closeModal').addEventListener('click', function() {
      document.getElementById('imageModal').classList.add('hidden');
      document.body.style.overflow = 'auto';
  });

  // Fermer la modal en cliquant n'importe où à l'extérieur de l'image
  document.getElementById('imageModal').addEventListener('click', function(event) {
      if (event.target === this) {
          this.classList.add('hidden');
          document.body.style.overflow = 'auto';
      }
  });

  // Fermer la modal avec la touche Escape
  document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape' && !document.getElementById('imageModal').classList.contains('hidden')) {
          document.getElementById('imageModal').classList.add('hidden');
          document.body.style.overflow = 'auto';
      }
  });
</script>
